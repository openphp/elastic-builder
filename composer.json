{
  "name": "openphp/elastic-builder",
  "description": "elastic-builder",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "wangzhiqiang",
      "email": "zhiqiangwang@aliyun.com"
    }
  ],
  "require": {
    "php": ">5.6",
    "ext-json": "*",
    "ext-bcmath": "*"
  },
  "autoload": {
    "psr-4": {
      "Openphp\\ElasticBuilder\\": "src/"
    }
  },
  "require-dev": {
    "elasticsearch/elasticsearch": "v5.5",
    "phpunit/phpunit": "^8"
  },
  "autoload-dev": {
    "psr-4": {
      "Openphp\\ElasticBuilder\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "fresh": [
      "rm -rf vendor composer.lock",
      "composer install"
    ],
    "tests": [
      "php vendor/bin/phpunit"
    ]
  }
}
